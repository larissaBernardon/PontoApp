@model PontoApp.Models.PunchTheClock

<h4>Novo ponto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="username" class="control-label"></label>
                <input asp-for="username" class="form-control" />
                <span asp-validation-for="username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="startedIn" class="control-label"></label>
                <input asp-for="startedIn" class="form-control" />
                <span asp-validation-for="startedIn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="finishedIn" class="control-label"></label>
                <input asp-for="finishedIn" class="form-control" />
                <span asp-validation-for="finishedIn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-primary btn-sm"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-dark btn-sm">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
