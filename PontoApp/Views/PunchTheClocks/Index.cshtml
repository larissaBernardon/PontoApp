@model IEnumerable<PontoApp.Models.PunchTheClock>

<h1>Pontos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary w-1 p-2">Criar novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.userId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.startedIn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.finishedIn)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.userId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.startedIn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.finishedIn)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary w-1 p-2">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary w-1 p-2">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-light w-1 p-2">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
